<div id='login'>
    <% if @current_user %>
            <p id='welcome'> Welcome, <%= @current_user.name %> !</p> 
            <%= link_to 'Log Out', logout_path, :method => :post %>
    <% else %>
            <p id='login'> <%= link_to 'Log in with your Twitter account', '/auth/twitter' %> </p>
    <% end %>
</div>